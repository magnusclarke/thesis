	file = {Full Text PDF:/Users/opennopasswordrequired/Library/Application Support/Zotero/Profiles/3odw5o7q.default/zotero/storage/AJICBUH4/Egset et al. - 2012 - Artificial selection on allometry change in eleva.pdf:application/pdf;Snapshot:/Users/opennopasswordrequired/Library/Application Support/Zotero/Profiles/3odw5o7q.default/zotero/storage/BRMABQXE/full.html:text/html}
